<div class='video__wrapper'>
  {{#if isModal}}
    <img
      id='video-back-button'
      class='video__back'
      src='/assets/icons/closeIcon.svg'
    />
  {{/if}}
  <div class='video__container'>
    <video id='video' class='video' autoplay>
      <source src={{videoUrl}} type='video/mp4' />
    </video>

    <div id='video-placeholder' class='video__placeholder'>
      <div class='loader__wrapper'>
        <div class='loader'></div>
      </div>
    </div>

    <div class='video__title'>
      <img class='video__title_image' src={{titleImage}} alt='title' />
      {{#if currentSeason}}
        <h4 class='video__title_text'>{{currentSeason}}
          сезон,
          {{currentSeries}}
          серия</h4>
      {{/if}}
    </div>

    <div id='video-mobile-controls' class='video-mobile__controls'>
      <img
        id='rewind-back-button-mobile'
        class='video-mobile__controls_icon'
        src='/assets/icons/rewindBackIcon.svg'
        alt='rewind-back'
      />
      <span
        id='play-pause-mobile'
        class='video-mobile__controls_icon video__controls_icon_play'
      ></span>
      <img
        id='rewind-front-button-mobile'
        class='video-mobile__controls_icon'
        src='/assets/icons/rewindFrontIcon.svg'
        alt='rewind-back'
      />
    </div>
  </div>
  <div id='video-controls' class='video__controls'>
    <p class='video-mobile__controls_timer'>
      <span
        id='current-time-mobile'
        class='video-mobile__controls_timer_time'
      >00:00</span>
      /
      <span class='video-mobile__controls_timer_time' id='duration'>00:00</span>
    </p>
    <div class='video__controls_progress'>
      <div class='video__progress'>
        <input
          id='progress-slider'
          class='video__progress_slider'
          type='range'
          min='0'
          max='100'
          step='0.0001'
          value='0'
        />
      </div>
    </div>

    <div class='video__controls_actions'>
      <div class='video__controls_actions_left'>
        {{#if hasPrevSeries}}
          <img
            id='prev-series-button'
            class='video__controls_icon'
            src='/assets/icons/nextSeries.svg'
            alt='prev-series'
          />
        {{/if}}

        <span
          id='play-pause'
          class='video__controls_icon video__controls_icon_play'
        ></span>

        {{#if hasNextSeries}}
          <img
            id='next-series-button'
            class='video__controls_icon'
            src='/assets/icons/nextSeries.svg'
            alt='next-series'
          />
        {{/if}}

        <p class='video__controls_actions_left_time'>
          <span id='current-time' class='video__controls_timer'>00:00</span>
          /
          <span class='video__controls_timer' id='duration'>00:00</span>
        </p>

        {{#if hasPrevSeries}}
          <img
            id='prev-series-button-mobile'
            class='video-mobile__controls_bottom_icon'
            src='/assets/icons/nextSeries.svg'
            alt='prev-series'
          />
        {{/if}}

        {{#if hasNextSeries}}
          <img
            id='next-series-button-mobile'
            class='video-mobile__controls_bottom_icon'
            src='/assets/icons/nextSeries.svg'
            alt='next-series'
          />
        {{/if}}
      </div>

      <div class='video__controls_actions_right'>
        <div id='series-block' class='video__controls_seasons'>
          <div id='video-series' class='video__series'></div>
          <div id='seasons-button' class='video__controls_seasons_title_block'>
            <img
              class='video__controls_icon'
              src='/assets/icons/episodesIcon.svg'
              alt='rewind-back'
            />
            <p class='video__controls_seasons_title'>Сезоны и серии</p>
          </div>

        </div>

        <img
          id='rewind-back-button'
          class='video__controls_icon'
          src='/assets/icons/rewindBackIcon.svg'
          alt='rewind-back'
        />
        <img
          id='rewind-front-button'
          class='video__controls_icon'
          src='/assets/icons/rewindFrontIcon.svg'
          alt='rewind-back'
        />
        <div id='volume-block' class='video__controls_volume'>
          <span
            id='volume-off-up'
            class='video__controls_icon video__controls_icon_volume-up'
          ></span>
          <input
            class='video__controls_volume_input'
            type='range'
            id='volume-input'
            min='0'
            max='1'
            step='0.0000001'
            value='1'
          />
        </div>
        <span
          id='full-small'
          class='video__controls_icon video__controls_icon_full'
        ></span>
      </div>
    </div>
  </div>
</div>